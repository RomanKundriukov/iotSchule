<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiClient.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10">

            <Label Text="Dein Benutzername:" />
            <Entry x:Name="UsernameEntry" Placeholder="z. B. sasha" />

            <Button x:Name="VerbundenButton" Text="Verbinden" Clicked="OnVerbindenClicked"/>

            <Label Text="Benutzer online:" Margin="0,10,0,0"/>
            <Picker x:Name="UserPicker" Title="Empfänger wählen" />

            <Label Text="Nachricht schreiben:" Margin="0,10,0,0"/>
            <Entry x:Name="NachrichtEntry" Placeholder="Nachricht..." />

            <Button Text="Senden" Clicked="OnSendenClicked" />

            <Label Text="Chat Verlauf:" Margin="0,10,0,0"/>
            <CollectionView x:Name="ChatVerlauf">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
